<div class="row justify-content-center">
  <div class="col-sm-12 col-md-7">
    <div class="card">
      <div class="container">
        <h2 class="card-title text-center">
          <i class="fas fa-user-circle text-primary pr-2"></i>Login
        </h2>
        <div class="card-body">
          <%= form_with scope: :session, url: login_path, local: true do |form| %>
            <div class="form-group">
              <%= form.label :email, class: "bmd-label-floating" %>
              <%= form.text_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :password, class: "bmd-label-floating" %>
              <%= form.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="session_remember_me" name="session[remember_me]">
              <label class="custom-control-label" for="session_remember_me">Remember me on this device</label>
            </div>

            <div class="text-center">
              <%= button_tag type: "submit", class: "btn btn-primary active" do %>
                <i class="fas fa-sign-in-alt pr-2"></i>Login
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="card-footer">
          <div class="row justify-content-between">
            <div class="col-sm-6 col-md-6">
              <%= link_to "Forgot Password?", new_password_reset_path, class: "btn btn-link btn-block" %>
            </div>
            <div class="col-sm-6 col-md-6">
              <%= link_to "New User?", new_user_path, class: "btn btn-link btn-block" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
