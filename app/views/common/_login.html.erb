<div class="row justify-content-center">
  <div class="col-sm-4 col-md-7">
    <div class="card">
      <div class="container">
        <h2 class="card-title text-center">
          <i class="fas fa-user-circle text-primary pr-2"></i>Login
        </h2>
        <div class="card-body">
          <%= form_with scope: :session, url: login_path, local: true do |form| %>
            <div class="form-group">
              <%= form.label :email, class: "bmd-label-floating" %>
              <%= form.text_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :password, class: "bmd-label-floating" %>
              <%= form.password_field :password, class: "form-control" %>
            </div>

            <div class="text-center">
              <%= button_tag type: "submit", class: "btn btn-primary active" do %>
                <i class="fas fa-sign-in-alt pr-2"></i>Login
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="card-footer">
          <div class="row justify-content-between">
            <%= link_to new_password_reset_path, class: "btn btn-light" do %>
              <i class="fas fa-user-lock pr-2"></i>Forgot Password?
            <% end %>
            <%= link_to new_user_path, class: "btn btn-light" do %>
              <i class="fas fa-user-plus pr-2"></i>New User?
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
