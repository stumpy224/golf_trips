<% provide(:title, title) %>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-7">
    <div class="card">
      <div class="container">
        <h2 class="card-title text-center">
          <i class="fas fa-user-circle text-primary pr-2"></i>Profile
        </h2>
        <div class="card-body">
          <%= form_with model: @user, local: true do |form| %>
            <%= render partial: 'common/error_messages', locals: { object: @user } %>

            <div class="form-group">
              <%= form.label :first_name, class: "bmd-label-floating" %>
              <%= form.text_field :first_name, class: "form-control", pattern: "[A-Z,a-z'-]*" %>
  <!--            <small class="error form-text text-muted">Whoa, what kind of name is that?!</small>-->
            </div>
            <div class="form-group">
              <%= form.label :last_name, class: "bmd-label-floating" %>
              <%= form.text_field :last_name, class: "form-control", pattern: "[A-Z,a-z'-]*" %>
            </div>
            <div class="form-group">
              <%= form.label :nickname, class: "bmd-label-floating" %>
              <%= form.text_field :nickname, class: "form-control" %>
              <small class="form-text text-muted">Optional</small>
            </div>
            <div class="form-group">
              <%= form.label :email, class: "bmd-label-floating" %>
              <%= form.text_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :password, class: "bmd-label-floating" %>
              <%= form.password_field :password, class: "form-control" %>
              <small class="form-text text-muted">Minimum of 6 characters</small>
            </div>
            <div class="form-group">
              <%= form.label :password_confirmation, class: "bmd-label-floating" %>
              <%= form.password_field :password_confirmation, class: "form-control" %>
              <small class="form-text text-muted">Minimum of 6 characters</small>
            </div>

            <div class="row justify-content-between">
              <%= link_to "Cancel", root_path, class: "btn btn-light" %>
              <%= button_tag type: "submit", class: "btn btn-primary" do %>
                <% if title.include?("Create") %>
                  <i class="fas fa-user-plus pr-2"></i>Create
                <% else %>
                  <i class="fas fa-save pr-2"></i>Save
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <% if title.include?("Create") %>
          <div class="card-footer text-center">
            <%= link_to login_path, class: "btn btn-link" do %>
              <i class="fas fa-user-check pr-2"></i>Already registered?
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
