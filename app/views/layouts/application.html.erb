<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'jquery.blockUI.min' %>

  <!-- Flash messages -->
  <%= stylesheet_link_tag 'toastr.min' %>
  <%= javascript_include_tag 'toastr.min' %>
  <%= javascript_include_tag 'notifier' %>

  <!-- Material UI -->
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Material+Icons' %>
  <%= stylesheet_link_tag 'https://code.getmdl.io/1.3.0/material.indigo-red.min.css' %>
  <%= javascript_include_tag 'material.min' %>
</head>

<body>

<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

  <%= render partial: 'layouts/partials/flash_messages', flash: flash %>
  <%= render partial: 'layouts/partials/header' %>

  <main class="mdl-layout__content">
    <div class="page-content">
      <%= yield %>
    </div>
  </main>
</div>

</body>
</html>
