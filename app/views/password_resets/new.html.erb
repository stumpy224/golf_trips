<% provide(:title, "Forgot Password") %>

<div class="mdl-grid center-items">
  <div class="mdl-card mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <div class="mdl-card__title-text">Forgot password</div>
    </div>
    <%= form_with scope: :password_reset, url: password_resets_path, local: true do |form| %>
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.text_field :email, class: "mdl-textfield__input" %>
          <%= form.label :email, class: "mdl-textfield__label" %>
          <span class="mdl-textfield__error">Email is invalid</span>
        </div>
      </div>
      <div class="mdl-grid mdl-card__actions mdl-card--border">
        <%= link_to "Cancel", root_path, class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored" %>
        <div class="mdl-layout-spacer"></div>
        <%= form.submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color-text--white" %>
      </div>
    <% end %>
  </div>
</div>
